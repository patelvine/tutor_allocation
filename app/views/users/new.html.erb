<% content_for :title, "Sign Up" %>

<h1>Sign Up</h1>

<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :username %>
    <%= f.input :password, required: true, as: :string %>
    <%= f.input :password_confirmation, required: true, as: :string %>
    <%= f.input :role, as: :select, collection: User.roles, include_blank: false, required: true %>
    <%= f.input :student_ID, hint: "Only put a student ID if the role is student" %>
  <% end %>
  <%= f.actions %>
<% end %>
