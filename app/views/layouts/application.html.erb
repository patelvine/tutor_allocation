<!DOCTYPE html>
<html>
<head>
  <title>PlaceholderTutorAllocation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller_name %>" class="<%= action_name %>">
<div class="container">
  <%= render 'layouts/navbar' %>
  <% if current_user.present? %>
    <span class='pull-right'>You are logged in as <%= current_user.username %> (<%= current_user.role %>)</span>
  <% end %>
  <%= image_tag "vuw-logo.png", class: "vuw-logo-large-centered"%>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, raw(msg), :class => "alert alert-#{alert_string(name)}" %>
  <% end %>

  <%= yield %>
</div>


</body>
</html>
